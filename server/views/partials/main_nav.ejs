  </button>
  
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto"> <!-- mr-auto makes the nav go on the left -->
        
        <!-- Using ejs to set the right nav icons to active as necessary -->
        <% if (title == "Home") { %>
          <li class="nav-item active">
          <% } else { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/home"><i class="fas fa-lg fa-user-graduate"></i> Home </a>
          </li>
          
          <!-- About Me link -->
          <% if (title == "About Me") { %>
          <li class="nav-item active">
          <% } else { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/about"><i class="fas fa-lg fa-address-card"></i> About Me </a>
          </li>
          
          <!-- Projects link -->
          <% if (title == "Projects") { %>
          <li class="nav-item active">
          <% } else { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/projects"><i class="fas fa-lg fa-archive"></i> Projects </a>
          </li>
          
          <!-- Services link -->
          <% if (title == "Services") { %>
          <li class="nav-item active">
          <% } else { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/services"><i class="fas fa-lg fa-laptop-code"></i> Services </a>
          </li>
          
          <!-- Contact Me link -->
          <% if (title == "Contact Me") { %>
          <li class="nav-item active">
          <% } else { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/contact"><i class="fas fa-lg fa-paper-plane"></i> Contact Me </a>
          </li>

          <!-- Business Contacts -->
          <% if (title == "Contacts") { %>
          <li class="nav-item active">
          <% } else { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/contacts-list"><i class="fas fa-lg fa-id-card-alt"></i> Business Contacts </a>
          </li>

          <!-- Display the Username & Login/Logout when Logged In -->
          <% if (typeof displayName == 'string' && displayName) { %>
          <li class="navbar-text"><i class="fas fa-lg fa-user"></i> Welcome, <%= displayName %></li>
          <li class="nav-item"><a href="/logout" class="nav-link">
            <i class="fas fa-lg fa-sign-out-alt"></i> Logout</a></li>
          <% } else { %>
          <li class="nav-item"><a href="/login" class="nav-link">
            <i class="fas fa-lg fa-sign-in-alt"></i> Login</a></li>
          <% } %>

    </div>
  </nav>